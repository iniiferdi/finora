<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/btnDetailBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/ripple_circle"
                app:tint="#222"/>

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction Detail"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>


        <!-- CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_soft"
            android:layout_marginTop="26dp">

            <!-- ICON -->
            <ImageView
                android:id="@+id/iconType"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_income"
                android:tint="#1C7C54"/>

            <!-- AMOUNT -->
            <TextView
                android:id="@+id/tvDetailAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

            <!-- TYPE CHIP -->
            <TextView
                android:id="@+id/tvDetailType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INCOME"
                android:textSize="12sp"
                android:textColor="#1C7C54"
                android:background="@drawable/chip_soft"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />


            <!-- DETAIL SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="26dp">

                <!-- Item -->
                <TextView
                    style="@style/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#555"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Value"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:layout_marginBottom="14dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>