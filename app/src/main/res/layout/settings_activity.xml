<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:id="@+id/settingsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_above="@+id/bottomNavbar">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:tint="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>


        <!-- Section Title -->
        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp" />

        <!-- OPTIONS WRAPPER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Option 1 -->
            <LinearLayout
                android:id="@+id/optionDarkMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ig_card_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark Mode"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#888888" />

            </LinearLayout>

            <!-- Option 2 -->
            <LinearLayout
                android:id="@+id/optionAbout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ig_card_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About App"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#888888" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!-- NAVBAR (TIDAK DIUBAH) -->
    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/bill"
            android:tint="#111111" />

        <ImageView
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/wallet"
            android:tint="#111111" />

        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="12dp"
            android:src="@drawable/add"
            android:tint="#111111" />

        <ImageView
            android:id="@+id/navStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/stats"
            android:tint="#111111" />

        <ImageView
            android:id="@+id/navSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/setting"
            android:tint="#111111" />
    </LinearLayout>

</RelativeLayout>
